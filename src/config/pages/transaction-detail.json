{
    "path": "/transaction/:transactionHash",
    "name": "transaction-detail",
    "meta": {
        "group": "detail-page",
        "keepAliveGoTo": []
    },
    "props": {
        "layout": "flex",
        "storeNamespaces": [],
        "initActions": ["transaction/getTransactionInfoByHash"],
        "schema": [
            {
                "layoutOptions": "full-width",
                "type": "CardTable",
                "title": "Transaction Info",
                "managerGetter": "transaction/info",
                "errorMessage": "Transaction does not exist.",
                "pagination": "none",
                "fields": [
                    "blockHeight",
                    "transactionHash",
                    "transactionId",
                    "date",
                    "deadline",
                    "effectiveFee",
                    "signature",
                    "signer",
                    "status",
                    "confirm"
                ]
            },
            {
                "layoutOptions": "adaptive",
                "type": "CardTable",
                "title": "Transaction Detail",
                "managerGetter": "transaction/info",
                "dataGetter": "transaction/transactionDetail",
                "pagination": "none"
            },
            {
                "layoutOptions": "adaptive",
                "type": "CardTable",
                "title": "Mosaics",
                "managerGetter": "transaction/info",
                "dataGetter": "transaction/transferMosaics",
                "pagination": "client",
                "pageSize": 5,
                "hideEmptyData": true,
                "fields": [
                    "mosaicId",
                    "amount",
                    "mosaicAliasName"
                ]
            },
            {
                "layoutOptions": "full-width",
                "type": "CardTable",
                "title": "Aggregate Inner Transactions",
                "managerGetter": "transaction/info",
                "dataGetter": "transaction/aggregateInnerTransactions",
                "pagination": "client",
                "pageSize": 5,
                "hideEmptyData": true,
                "fields": [
                    "transactionId",
                    "type",
                    "signer",
                    "transactionBody"
                ]
            },
            {
                "layoutOptions": "full-width",
                "type": "CardTable",
                "title": "Aggregate Inner Transactions",
                "managerGetter": "transaction/info",
                "dataGetter": "transaction/aggregateCosignatures",
                "pagination": "client",
                "pageSize": 5,
                "hideEmptyData": true,
                "fields": [
                    "signature",
                    "signer"
                ]
            }
        ]
    }
}