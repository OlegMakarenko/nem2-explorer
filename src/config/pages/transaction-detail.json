{
    "path": "/transaction2/:transactionHash",
    "name": "transaction2",
    "meta": {
        "group": "detail-page",
        "keepAliveGoTo": []
    },
    "props": {
        "layout": "flex",
        "storeNamespaces": ["transaction"],
        "initActions": ["transaction/getTransactionInfoByHash"],
        "schema": [
            {
                "layoutOptions": "full-width",
                "type": "CardTable",
                "title": "Transaction Info",
                "managerGetter": "transaction/info",
                "errorMessage": "Failed to fetch transaction list",
                "pagination": "none",
                "fields": [
                    "blockHeight",
                    "transactionHash",
                    "transactionId",
                    "date",
                    "deadline",
                    "effectiveFee",
                    "signature",
                    "signer",
                    "status",
                    "confirm"
                ]
            },
            {
                "layoutOptions": "full-width",
                "type": "CardTable",
                "title": "Transaction Info",
                "managerGetter": "transaction/info",
                "errorMessage": "Failed to fetch transaction list",
                "pagination": "none",
                "hasFilter": false,
                "fields": [
                    "blockHeight",
                    "transactionHash",
                    "transactionId",
                    "date",
                    "deadline",
                    "effectiveFee",
                    "signature",
                    "signer",
                    "status",
                    "confirm"
                ]
            },
            {
                "layoutOptions": "adaptive",
                "type": "CardTable",
                "title": "Transaction Detail",
                "managerGetter": "transaction/info",
                "dataGetter": "transaction/transactionDetail",
                "errorMessage": "Failed to fetch transaction list",
                "pagination": "none",
                "hasFilter": false
            },
            {
                "layoutOptions": "adaptive",
                "type": "CardTable",
                "title": "Mosaics",
                "managerGetter": "transaction/info",
                "dataGetter": "transaction/transferMosaics",
                "errorMessage": "Failed to fetch transaction list",
                "pagination": "client",
                "pageSize": 5,
                "hideEmptyData": true,
                "hasFilter": false
            }
        ]
    }
}